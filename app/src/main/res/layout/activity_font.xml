<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/includeMainTitle"
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="48dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="14dp"
        android:paddingLeft="14dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Normal：This is the example for 'Fonts in XML'"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textColor="@color/colorPrimary"
            android:text="alfa_slab_one_Normal：This is the example for Fonts in XML"
            android:fontFamily="@font/alfa_slab_one"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvAlfaItalic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textColor="@color/colorAccent"
            android:text="alfa_slab_one_Italic：This is the example for 'Fonts in XML'"
            android:fontFamily="@font/teaphy"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvAldrich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textColor="@color/colorPrimary"
            android:text="alfa_slab_one_Italic：This is the example for 'Fonts in XML'"
            android:textSize="16sp"/>
    </LinearLayout>


</LinearLayout>
